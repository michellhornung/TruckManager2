@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-left">
    <h1 class="display-4">Cadastro de Caminhões</h1>

    <div id="truck-list" style="display:block;">
        <div class="col-12" style="text-align:right">
            <button type="button" id="truck-list-btnnew" class="btn btn-primary pull-left">Novo</button>
        </div>
        <br />
        <div class="col-12">
            <table id="truck-list-table">
                <thead>
                    <tr>
                        <th>Tipo</th>
                        <th>Descrição</th>
                        <th>Ano Fabricação</th>
                        <th>Ano Modelo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="truck-list-table-body">
                </tbody>
            </table>
        </div>
    </div>

    <div id="truck-add" style="display:none;">
        <div class="form-group">
            <label for="truck-add-type">Tipo</label>
            <select class="form-control" id="truck-add-type">
                <option value="0">Selecione</option>
                <option value="1">FH</option>
                <option value="2">FM</option>
            </select>
        </div>
        <div class="form-group">
            <label for="truck-add-name">Descrição</label>
            <input type="text" class="form-control" id="truck-add-name" placeholder="Descrição">
        </div>
        <div class="form-group">
            <label for="truck-add-manufactoryyear">Ano Fabricação</label>
            <input type="number" class="form-control" id="truck-add-manufactureyear" placeholder="Ano Fabricação">
        </div>
        <div class="form-group">
            <label for="truck-add-manufactoryyear">Ano Modelo</label>
            <input type="number" class="form-control" id="truck-add-modelyear" placeholder="Ano Modelo">
        </div>
        <button type="button" class="btn btn-secondary truck-btn-cancelar">Cancelar</button>
        <button type="button" id="truck-add-btnsave" class="btn btn-primary">Salvar</button>
    </div>

    <div id="truck-edit" style="display:none;">
        <div class="form-group">
            <input type="hidden" id="truck-edit-id" />
        </div>
        <div class="form-group">
            <label for="truck-edit-type">Tipo</label>
            <select class="form-control" id="truck-edit-type">
                <option value="0">Selecione</option>
                <option value="1">FH</option>
                <option value="2">FM</option>
            </select>
        </div>
        <div class="form-group">
            <label for="truck-edit-name">Descrição</label>
            <input type="text" class="form-control" id="truck-edit-name" placeholder="Descrição">
        </div>
        <div class="form-group">
            <label for="truck-edit-manufactoryyear">Ano Fabricação</label>
            <input type="number" class="form-control" id="truck-edit-manufactureyear" placeholder="Ano Fabricação">
        </div>
        <div class="form-group">
            <label for="truck-edit-manufactoryyear">Ano Modelo</label>
            <input type="number" class="form-control" id="truck-edit-modelyear" placeholder="Ano Modelo">
        </div>
        <button type="button" class="btn btn-secondary truck-btn-cancelar">Cancelar</button>
        <button type="button" id="truck-edit-btnsave" class="btn btn-primary">Salvar</button>
    </div>

</div>

<script type="text/template" id="truck-list-table-template">
    <tr>
        <td>${modelType}</td>
        <td>${name}</td>
        <td>${manufactureYear}</td>
        <td>${modelYear}</td>
        <td>
            <div class="btn-group" role="group" aria-label="Basic example">
                <button type="button" class="btn btn-primary" onclick="truckmanager.edit.open(${id})">Editar</button>
                <button type="button" class="btn btn-danger" onclick="truckmanager.delete(${id})">Excluir</button>
            </div>
        </td>
    </tr>
</script>

@section scripts {
    <script src="~/js/truck-manager.js"></script>
}

